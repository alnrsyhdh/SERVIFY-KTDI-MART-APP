<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenOffWhite">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/starbuck"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="15sp"
        android:paddingTop="15sp"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="6"
        android:shadowRadius="10"
        android:text="Add Product Details"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/addProductPic"
        android:layout_width="141dp"
        android:layout_height="133dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:src="@drawable/default_pic"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/productName"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_below="@id/productNameTextView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/round_rec"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:hint="Product Name"
        android:inputType="text"
        android:textColor="@color/starbuck"
        android:textColorHint="@color/starbuck"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/productPrice"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_below="@id/productPriceTextView"
        android:layout_marginStart="27dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/round_rec"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:hint="RM 0.00"
        android:inputType="numberDecimal"
        android:textColor="@color/starbuck"
        android:textColorHint="@color/starbuck"
        android:textSize="16sp" />

    <Button
        android:id="@+id/uploadPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productPrice"
        android:layout_marginTop="23dp"
        android:background="@drawable/round_rec"
        android:gravity="center"
        android:text="PICK IMAGE"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addProductPic"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        android:textColor="@color/starbuck"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameTextView"
        android:layout_marginStart="29dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Price (RM)"
        android:textColor="@color/starbuck"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/uploadPic"
        android:layout_centerInParent="true"
        android:layout_marginTop="14dp"
        android:background="@color/starbuck"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="15sp"
        android:paddingTop="15sp"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="6"
        android:shadowRadius="10"
        android:textColor="@color/white"
        android:textSize="30sp" />


</RelativeLayout>
